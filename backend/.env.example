# Backend config
PORT=4000

# Gemini API
GEMINI_API_KEY=
# Optional override
GEMINI_MODEL_VISION=gemini-2.5-flash
GEMINI_MODEL_TEXT=gemini-2.5-flash

# Firebase Admin credentials
# Option A (recommended): paste service account JSON as a single-line JSON string
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}
FIREBASE_SERVICE_ACCOUNT_JSON=

# Option B: set a path via GOOGLE_APPLICATION_CREDENTIALS (can be set in your system env)
# GOOGLE_APPLICATION_CREDENTIALS=C:\\path\\to\\service-account.json

# Comma-separated list of allowed origins for CORS (optional)
# Example: CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ORIGINS=
