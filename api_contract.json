{
  "openapi": "3.0.0",
  "info": {
    "title": "FinBridge.id API (MVP Simplified)",
    "description": "API untuk MVP FinBridge dengan pendekatan validasi manual (Concierge MVP).",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.finbridge.id/v1"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Registrasi User (Tanpa Auto Validasi NIK)",
        "description": "User mendaftar dan input NIK. Validasi NIK dilakukan manual oleh admin di backend.",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "full_name": { "type": "string" },
                  "email": { "type": "string" },
                  "phone": { "type": "string" },
                  "password": { "type": "string" },
                  "nik": { "type": "string", "description": "16 digit NIK" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully"
          }
        }
      }
    },
    "/user/upload-identity": {
      "post": {
        "summary": "Upload Dokumen Identitas",
        "tags": ["User Profile"],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "ktp_image": { "type": "string", "format": "binary" },
                  "selfie_image": { "type": "string", "format": "binary" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Uploaded for admin review" }
        }
      }
    },
    "/data/upload-evidence": {
      "post": {
        "summary": "Upload Bukti Transaksi (Screenshot)",
        "description": "Menggantikan integrasi API langsung. User upload screenshot struk/riwayat.",
        "tags": ["Alternative Data"],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "category": { 
                    "type": "string", 
                    "enum": ["electricity_bill", "ewallet_history"] 
                  },
                  "image_file": { "type": "string", "format": "binary" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { 
            "description": "Evidence uploaded. Status is pending until Admin verifies amount." 
          }
        }
      }
    },
    "/scoring/dashboard": {
      "get": {
        "summary": "Get Credit Score & Recommendations",
